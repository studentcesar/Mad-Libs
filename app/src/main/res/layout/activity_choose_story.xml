<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="12dp"
    android:paddingRight="12dp"
    android:paddingTop="18dp"
    android:paddingBottom="18dp"
    tools:context=".ChooseStoryActivity">

    <TextView
        android:id="@+id/choose_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="serif-monospace"
        android:gravity="center"
        android:text="@string/choose_title"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textStyle="bold" />

    <android.support.v7.widget.GridLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="1"
        app:columnCount="3"
        app:rowCount="5">

        <ImageButton
            android:id="@+id/simple"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/troll"
            android:onClick="buttonClicked"
            app:layout_column="0"
            app:layout_row="0" />

        <ImageButton
            android:id="@+id/tarzan"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/tarzan"
            android:onClick="buttonClicked"
            app:layout_column="2"
            app:layout_row="0" />

        <ImageButton
            android:id="@+id/university"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/university"
            android:onClick="buttonClicked"
            app:layout_column="0"
            app:layout_row="2" />

        <ImageButton
            android:id="@+id/clothing"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/clothes"
            android:onClick="buttonClicked"
            app:layout_column="2"
            app:layout_row="2" />

        <ImageButton
            android:id="@+id/dancing"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/dancing"
            android:onClick="buttonClicked"
            app:layout_column="1"
            app:layout_row="1" />
    </android.support.v7.widget.GridLayout>

</LinearLayout>